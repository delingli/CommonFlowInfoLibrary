<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#361352">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="12dp"
            android:drawableLeft="@drawable/ic_tb_back"
            android:drawablePadding="5dp"
            android:gravity="left|center"
            android:text="快速充电"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_below="@+id/tv_back"
            android:layout_height="wrap_content"
            android:src="@drawable/img_charging_head" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="快速充电"
            android:textColor="#bb2b2828"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:text="使用充电屏保加速充电,并防止过度充电"
            android:textColor="@color/color_e0e0e0"
            android:textSize="12dp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/sw_ofOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:checked="false"
            android:minWidth="20dp"
            app:theme="@style/MySwitch" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/color_e0e0e0" />
</LinearLayout>
